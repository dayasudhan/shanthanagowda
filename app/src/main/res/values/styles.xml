<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/jds_background</item>

    </style>
    <style name="ThemeFullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/jds_background</item>
    </style>
    <!--gagan-->
    <declare-styleable name="CirclePageIndicator">
        <attr name="indicator_spacing" format="dimension" />
    </declare-styleable>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Inverse" />

    <!--gagan-->

</resources>
