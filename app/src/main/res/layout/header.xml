<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:theme="@style/ThemeOverlay.AppCompat.Dark"
android:orientation="vertical"
android:gravity="bottom"
android:layout_height="@dimen/nav_header_height"
android:layout_width="match_parent"
android:id="@+id/profileinfo"
xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

<ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/img_header_bg" android:src="@drawable/navheader" android:scaleType="fitXY"/>


<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="@dimen/activity_horizontal_margin" android:layout_centerVertical="true">

    <ImageView android:layout_height="@dimen/profile_height"
        android:layout_width="@dimen/profile_width"
        android:id="@+id/img_profile"
        app:srcCompat="@mipmap/ic_prof_heading"
        android:paddingTop="@dimen/nav_header_vertical_spacing"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/name"
        android:text="@string/titletext"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>



</LinearLayout>

</RelativeLayout>